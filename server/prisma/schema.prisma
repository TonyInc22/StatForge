generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sport {
  id     Int      @id
  name   String   @unique
  League League[]
}

model League {
  id      Int     @id
  name    String
  abbr    String?
  Team    Team[]
  sportId Int
  sport   Sport   @relation(fields: [sportId], references: [id])
}

model Team {
  id             Int     @id
  abbr           String?
  name           String
  displayName    String
  location       String
  color          String?
  alternateColor String?
  logo           String?
  leagueId       Int
  league         League  @relation(fields: [leagueId], references: [id])
}

model Player {
  id            Int      @id
  firstName     String
  lastName      String
  fullName      String
  shortName     String?
  weight        String?
  height        String?
  displayHeight String?
  dateOfBirth   String
  headshot      String?
  jersey        Int?
  positionID    Int
  position      Position @relation(fields: [positionID], references: [id])
  draftYear     Int?
  city          String?
  country       String?
  state         String?
}

model Position {
  id     Int      @id
  name   String
  abbr   String?
  Player Player[]
}

